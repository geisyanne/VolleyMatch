<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MeuApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#CCB914</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24</item>
        <!-- ActionMode. -->
        <item name="actionModeStyle">@style/actionModeTheme</item>
        <item name="windowActionModeOverlay">true</item>

    </style>

    <!-- ActionMode.Style -->
    <style name="actionModeTheme" parent="@style/Widget.MaterialComponents.ActionMode">
        <item name="titleTextStyle">@style/TextActionMode</item>
        <item name="subtitleTextStyle">@style/TextAppearance.Material3.ActionBar.Subtitle</item>
        <item name="background">@color/blue</item>
        <item name="closeItemLayout">@layout/item_action_mode_close</item>
    </style>
    <!-- ActionMode.Text -->
    <style name="TextActionMode" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>