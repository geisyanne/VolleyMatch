<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.VolleyMatch.FormTextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.VolleyMatch.FormInputLayout_EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Theme.VolleyMatch.FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.VolleyMatch.FormInputLayout_DropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:maxWidth">245dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
    </style>

    <style name="Theme.VolleyMatch.FormAutoComplete_DropDown">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:inputType">none</item>
        <item name="android:dropDownSelector">@color/yellow_light</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Theme.VolleyMatch.FormLoadingButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- customizableDialog -->
    <style name="Theme.VolleyMatch.Text.customizableDialog" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.VolleyMatch.Switch.customizableDialog" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:checked">false</item>
        <item name="android:gravity">center</item>
        <item name="materialThemeOverlay">@style/SwitchColorOverlay</item>
    </style>

    <style name="SwitchColorOverlay">
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorSecondary">@color/yellow_primary</item>
    </style>


    <!-- ActionMode.Style -->
    <style name="actionModeTheme" parent="@style/Widget.MaterialComponents.ActionMode">
        <item name="titleTextStyle">@style/TextActionMode</item>
        <item name="subtitleTextStyle">@style/TextAppearance.Material3.ActionBar.Subtitle</item>
        <item name="background">@color/blue_primary</item>
        <item name="closeItemLayout">@layout/item_action_mode_close</item>
    </style>

    <!-- ActionMode.Text -->
    <style name="TextActionMode" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- BottomNavigationView -->
    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator" parent="">
        <item name="android:width">64dp</item>
        <item name="android:height">32dp</item>
        <item name="marginHorizontal">4dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator</item>
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/blue_primary</item>
    </style>

</resources>