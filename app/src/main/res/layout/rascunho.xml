<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/drawTeam_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="25dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/drawTeam_txt_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="10dp"
        android:text="@string/list"
        android:textColor="#3A3A3A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/drawTeam_view"
        app:layout_constraintEnd_toEndOf="@id/drawTeam_view"
        app:layout_constraintStart_toStartOf="@id/drawTeam_view"
        app:layout_constraintTop_toTopOf="@id/drawTeam_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/drawTeam_rv_select_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/drawTeam_view"
        tools:itemCount="15"
        tools:listitem="@layout/item_rv_player_select" />


</androidx.constraintlayout.widget.ConstraintLayout>