<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/item_select_players_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_player_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/player"
        app:layout_constraintTop_toTopOf="@+id/item_select_players_checkbox"
        app:layout_constraintBottom_toBottomOf="@+id/item_select_players_checkbox"
        app:layout_constraintStart_toEndOf="@+id/item_select_players_checkbox"
        android:maxLines="1" />

</androidx.constraintlayout.widget.ConstraintLayout>