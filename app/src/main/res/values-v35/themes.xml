<resources>
    <!-- Base application theme. -->
    <style name="Theme.VolleyMatch" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorPrimaryContainer">@color/blue_transparent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_primary</item>
        <item name="colorOnSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorSecondaryContainer">#FEFAFD</item>
        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/black</item>
        <item name="colorTertiaryFixed">@color/gray_light</item>
        <item name="colorTertiaryContainer">#F2F6F8</item>
        <!-- Status bar color. -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Toolbar. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24</item>
        <!-- ActionMode. -->
        <item name="actionModeStyle">@style/actionModeTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="Theme.VolleyMatch.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/blue_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ball_blue</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.VolleyMatch</item>
    </style>

    <style name="containerInitial">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="containerMain">
        <item name="android:background">@color/white</item>
    </style>

    <style name="containerPlayers">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="txtBlueWhite">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="txtGray">
        <item name="android:textColor">@color/gray_medium</item>
    </style>

    <style name="txtBlueMediumYellow">
        <item name="android:textColor">@color/blue_medium</item>
    </style>

    <style name="bottomNav">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/blue_primary</item>
    </style>

    <style name="ratingBarCustomizable" parent="Widget.AppCompat.RatingBar.Small">
        <!-- Define a cor das estrelas preenchidas -->
        <item name="android:progressTint">@color/yellow_primary</item>
        <!-- Define a cor das estrelas vazias -->
        <item name="android:progressBackgroundTint">@color/gray_light</item>
    </style>

    <style name="CheckBoxCustom" parent="Widget.AppCompat.CompoundButton.CheckBox">

    </style>

    <!-- Scoreboard Screen. -->
    <style name="scoreboardColors">
        <item name="android:background">@color/yellow_primary</item>
    </style>

    <style name="scoreboardColorsTxt">
        <item name="android:textColor">@color/blue_primary</item>
    </style>

    <style name="scoreboardColors2">
        <item name="android:background">@color/blue_primary</item>
    </style>

    <style name="scoreboardColorsTxt2">
        <item name="android:textColor">@color/yellow_primary</item>
    </style>

    <style name="scoreboardColorsBtn">
        <item name="android:tint">@color/white</item>
    </style>

</resources>