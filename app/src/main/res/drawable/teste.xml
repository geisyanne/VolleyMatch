<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado quando o botão está pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/yellow_primary" /> <!-- Cor laranja -->
            <corners android:radius="10dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
    <!-- Estado padrão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue_primary" /> <!-- Cor amarela -->
            <corners android:radius="10dp" /> <!-- Cantos arredondados -->
        </shape>
    </item>
</selector>
